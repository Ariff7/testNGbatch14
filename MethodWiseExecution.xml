<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true"
          name="methodwiseExecution">
       <classes>
           <class name="Class01_.priority">
           <methods>
               <include name="Ctest"></include>
               <exclude name="Gtest"></exclude>
               <include name="Atest"></include>
               <include name="Btest"></include>
               <exclude name="Ktest"></exclude>

           </methods>
           </class>

           <class name="Class02_Assertions_andXML.HardAssertions">
               <methods>
                   <include name="invalidCredentials"></include>
               </methods>
           </class>
       </classes>
    </test>
</suite>